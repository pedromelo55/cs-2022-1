print("Informe a porcentagem do UPI a ser acrescido no valor das peças: ")
ipi = int(input())
print("Informe o código da peça 1: ")
codigoPeca1 = int(input())
print("Informe o valor unitária da peça 1: ")
valor1 = float(input())
print("Informe a quantidade de peças 1: ")
quant1 = int(input())
print("Informe o código da peça 2: ")
codigopeca2 = int(input())
print("Informe o valor unitária da peça 2: ")
valor2 = float(input())
print("Informe a quantidade de peças 2: ")
quant2 = int(input())

valorTotal = ((valor1 * quant1) + (valor2 * quant2)) * ((ipi / 100) + 1)

print("O valor total a ser pago é: ", valorTotal)
